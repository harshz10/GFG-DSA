//c++
stack<int> _push(int arr[],int n)
{
   // your code here
   stack<int>st;
   for(int i=0;i<n;i++)
   {
       if(i==0)
       st.push(arr[i]); //minimumn value ko push kar rha hu
       else
       st.push(min(arr[i],st.top()));
   }
   return st;
}

//Function to print minimum value in stack each time while popping.
void _getMinAtPop(stack<int>s)
{
    // your code here
    while(!s.empty())
    {
        cout<<s.top()<<" ";
        s.pop();
    }
}
