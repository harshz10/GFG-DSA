//C++++...
//new
Node* create(int in[], int post[], int is, int ie,int &postInd){

    if(is>ie) return NULL;

    

    Node* temp=new Node(post[postInd--]);

    

    int inIndex;

    for(int i=is;i<=ie;i++){

        if(in[i]==temp->data){

            inIndex=i;

            break;

        }

    }

    temp->right=create(in,post,inIndex+1,ie,postInd);

    temp->left=create(in,post,is,inIndex-1,postInd);

    return temp;

}

 

//Function to return a tree created from postorder and inoreder traversals.

Node *buildTree(int in[], int post[], int n) {

    // Your code here

    int postInd=n-1;

    Node* root=create(in,post,0,n-1,postInd);

    return root;

    

}
